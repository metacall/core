# Load common environment variables
source ../../hooks/env

# Base arguments
METACALL_INSTALL_OPTIONS="root base python ruby netcore2 nodejs typescript file rapidjson funchook swig clangformat" # v8rep51 pack and coverage not needed in DockerHub

# Base environment variables
DEBIAN_FRONTEND=noninteractive
LTTNG_UST_REGISTER_TIMEOUT=0
NUGET_XMLDOC_MODE=skip

# Override docker image
IMAGE_NAME=metacall/core:deps
